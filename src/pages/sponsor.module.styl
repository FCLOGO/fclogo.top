// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.main-content
  width 100%
  margin 0 auto
  flex 1 auto
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center
  padding header-height size-large

.main-content section
  width 100%

.inner
  max-width 1280px
  margin 0 auto
  text-align center
  margin-bottom header-height
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center

.inner h2
  display inline-block
  font-size 20px
  font-weight 600
  text-transform uppercase
  margin-bottom size-small
  letter-spacing 3px

.separator
  display block
  background-color var(--border-color-secondary)
  width header-height
  height 2px
  margin-bottom size-large

.sponsor-subtitle
  font-weight 600
  text-transform uppercase
  letter-spacing 2px
  font-size 16px
  color var(--text-color-secondary)

.payment-wrapper
  margin-top size-large
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items center
  width 100%

.payment
  border none
  width 48%
  height 180px
  display flex
  flex-flow row nowrap
  justify-content flex-start
  align-items center
  overflow hidden
  padding size-large
  border-radius size-small
  margin-bottom header-height
  background-color var(--logo-card-bg)
  box-shadow 2px 4px 12px rgba(0, 0, 0, 0.08)
  transition all 0.3s cubic-bezier(0, 0, 0.5, 1)
  &:hover
    border none
    color var(--text-color-primary)
    box-shadow 2px 4px 16px rgba(0, 0, 0, 0.16)
    transform scale3d(1.01, 1.01, 1.01)
  @media mq-tablet
    width 100%
    margin-bottom size-large

.payment-image
  flex none
  height 120px
  width 120px
  margin-right size-large

.payment-info
  height 120px
  flex auto
  display flex
  flex-direction column
  justify-content center
  align-items flex-start

.payment-info svg
  width 40px
  height 40px
  margin-bottom size-normal

.alipay-icon
  fill #3c78f6

.wechatpay-icon
  fill #00c250

.paypal-icon
  fill #0070ba

.fclogo-icon
  flex none
  width 120px
  fill var(--text-color-primary)
  margin-right size-large

.payment-info h3, .payment-info p
  padding 0
  margin 0
  line-height 1

.payment-info .separator
  margin size-small 0

.payment-info h3
  font-weight 600
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.payment-info p
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  color var(--text-color-secondary)

.contact-button
  padding 0
  background-color var(--btn-color-primary)
  color var(--btn-text-color)
  border none
  border-radius 3px
  cursor pointer
  font-size 18px
  line-height 1
  text-transform uppercase
  font-weight 600
  width 200px
  height 50px
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-between
  svg
    height 50px
    width 50px
    padding 12px
    flex none
    border-radius 3px 0 0 3px
    border-left 1px solid rgba(255, 255, 255, 0.35)
    background-color var(--btn-color-secondary)
    path
      stroke var(--btn-text-color) !important
    circle
      fill var(--btn-text-color)
  span
    flex 1 auto
    text-align center

.contact-button
  &:hover
    border none
    color var(--btn-text-color)
    background-color var(--btn-color-secondary)

.contact-button
  @media mq-tablet
    margin-left size-normal