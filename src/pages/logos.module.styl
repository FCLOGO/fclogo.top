// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.main-content
  width 100%
  margin 0 auto
  flex 1 auto
  display flex
  flex-flow column nowrap
  align-items flex-start
  padding-top 110px

.logos-wrapper
  width 100%
  margin 40px auto 100px auto
  padding 0 size-normal
  display flex
  flex-flow column nowrap

.adsense-container
  width 100%

.logos-container
  width 100%
  overflow hidden
  display grid
  margin-top size-large
  justify-content space-between
  grid-template-columns repeat(auto-fill, minmax(260px, 1fr))
  gap size-normal

.card-link
  border-radius size-mini
  border 1px solid var(--logo-card-border)
  position relative
  overflow hidden
  background-color var(--logo-card-bg)
  display flex
  flex-flow row wrap
  font-weight 500
  color var(--text-color-primary)
  &:hover
    border-color var(--logo-card-border-hover)
    color var(--text-color-primary)

.logo-image
  margin 15% 20%

.card-footer
  width 100%
  height header-height
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-content center
  align-items flex-start
  padding 0 size-normal
  border-top 1px solid var(--logo-card-border)

.logo-name
  margin 0
  padding 0
  flex 1 auto
  line-height header-height
  font-size 14px
  font-weight 500

.format-list
  flex 0 auto
  list-style none
  margin 0
  padding 0
  display flex
  flex-flow row nowrap
  align-content center
  align-items center

.format-item
  font-size 12px
  line-height 20px
  height 20px
  margin 20px 0
  padding 0 3px
  border-radius 3px
  background-color var(--btn-color-primary)
  color var(--header-text-color)
  text-transform uppercase
  &:first-child
    margin-right 5px

.load-ref-container
  padding-top header-height
  width 100%
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-content center
  align-items center

.load-ref-container span
  font-size 12px
  font-weight 600
  color var(--text-color-secondary)
  text-transform uppercase
  letter-spacing 0.3rem

.load-ref-container span&:nth-child(2)
  margin-left size-small
  margin-right size-small
  flex none

.load-ref-container span&:first-child, .load-ref-container span&:last-child
  width 100px
  height 1px
  background-color var(--border-color-primary)
  flex auto

.nothing-container
  padding-top header-height
  width 100%

.nothing-text
  font-size 14px
  font-weight 600
  text-align center
  color var(--text-color-secondary)