// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.main-content
  width 100%
  margin 0 auto
  flex 1 auto
  display flex
  flex-flow column nowrap
  align-items center
  justify-content flex-start
  padding-top 160px

.content-wrapper
  width 100%
  max-width 1280px
  margin 0 auto
  padding 0 size-large
  display flex
  flex-flow column nowrap

.content-wrapper table
  td, th
    text-align center
    border-width 1px
