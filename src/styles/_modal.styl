.ReactModal__Body--open
  overflow hidden
  position fixed
  width 100%
  height 100%

.modal_overlay
  position fixed
  z-index 100
  inset 0
  overflow hidden
  width 100%
  height 100%
  background-color var(--modal-color)

.modal_content
  position relative
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch
  width 100%
  height 100%
  background transparent
  z-index 2

.modal_close-link
  width 50px
  height 50px
  padding 5px
  border none
  position fixed
  top 30px
  right 50px
  color var(--header-text-color)
  &:hover
    border none
    color var(--header-text-color)
    background-color var(--btn-bg-hover)
    border-radius 50%