.boxContainer
  width calc(100% + 30px)
  margin-left -15px
  display flex
  flex-flow row wrap
  justify-content center
  align-items center
  article
    box-sizing border-box
    min-width 240px
    padding 15px
    margin-bottom 10px
    flex 1 0 25%

.box
  background-color white
  height 200px
  border 1px solid var(--borderColor)
  border-radius 5px
  box-shadow 0px 10px 15px 0px rgba(0, 23, 65, 0.1)