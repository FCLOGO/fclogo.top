.cards-container
  width 100%
  overflow hidden
  display grid
  justify-content space-between
  grid-template-columns repeat(auto-fill, minmax(300px, 1fr))
  gap size-large

.card-link
  border-radius size-mini
  border 1px solid var(--logo-card-border)
  position relative
  overflow hidden
  background-color var(--logo-card-bg)
  display flex
  flex-flow row wrap
  font-weight 500
  color var(--text-color-primary)
  &:hover
    border-color var(--logo-card-border-hover)
    color var(--text-color-primary)

.logo-image
  margin 15% 20%

.card-footer
  width 100%
  height header-height
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-content center
  align-items center
  padding 0 size-normal
  border-top 1px solid var(--logo-card-border)

.logo-name
  margin 0
  padding 0
  flex 1 auto
  line-height header-height
  font-size 14px
  font-weight 500

.format-list
  flex 0 auto
  list-style none
  margin 0
  padding 0
  display flex
  flex-flow row nowrap
  align-content center
  align-items center

.format-item
  font-size 12px
  line-height header-height
  height header-height
  padding 0 3px
  border-radius 3px
  background-color var(--btn-color-primary)
  color var(--header-text-color)
  text-transform uppercase
  &:first-child
    margin-right 5px

.style-badge
  flex 0 auto
  margin 0
  padding 0
  line-height size-normal
  text-transform uppercase
  font-size 12px
  font-weight 700
  height size-normal
  padding 0 3px
  border-radius 3px
  background-color var(--btn-color-primary)
  color var(--header-text-color)

.nothing-container
  padding-top header-height

.nothing-text
  font-size 14px
  font-weight 600
  text-align center
  color var(--text-color-secondary)