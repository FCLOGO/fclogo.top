// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
size-card = 300px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.cards-wrapper
  flex 1 auto
  display flex
  flex-flow column nowrap
  margin-bottom 40px

.cards-header
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-between
  width 100%
  height header-height
  line-height header-height

.cards-title
  flex 1 auto
  font-size 16px
  font-weight 600
  text-transform uppercase
  color var(--text-color-primary)
  margin 0
  padding 0

.more-link
  flex 0 auto
  text-transform uppercase
  font-weight 600
  height size-large
  line-height size-large
  border none
  padding 0 size-mini
  color var(--btn-color-primary)
  display inline-flex
  align-items center
  border-radius 3px
  &:hover
    border none
    color var(--btn-color-primary)
    background var(--btn-bg-hover)

.arrow-icon
  width size-normal
  height size-normal
  margin-left size-mini
  polyline, line
    stroke var(--btn-color-primary) !important

