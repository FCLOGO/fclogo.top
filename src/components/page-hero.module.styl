// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.hero-wrapper
  height 460px
  background-color var(--hero-bg-color)
  color var(--header-text-color)

.hero-content
  padding header-height size-large 0
  max-width 1080px
  margin 0 auto
  height 100%
  display flex
  flex-flow column nowrap
  justify-content center
  align-items center

.hero-slogan
  text-transform uppercase
  font-weight 600
  font-size 40px
  text-align center
  letter-spacing 3px
  line-height 1.5
  margin 0
  @media mq-tablet
    text-align center
