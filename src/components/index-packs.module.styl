// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
size-card = 300px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.cards-wrapper
  flex 1 auto
  display flex
  flex-flow column nowrap
  margin-bottom 40px

.cards-header
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-between
  width 100%
  height header-height
  line-height header-height

.cards-title
  flex 1 auto
  font-size 16px
  font-weight 600
  text-transform uppercase
  color var(--text-color-primary)
  margin 0
  padding 0

.more-link
  flex 0 auto
  text-transform uppercase
  font-weight 600
  height size-large
  line-height size-large
  border none
  padding 0 size-mini
  color var(--btn-color-primary)
  display inline-flex
  align-items center
  border-radius 3px
  &:hover
    border none
    color var(--btn-color-primary)
    background var(--btn-bg-hover)

.arrow-icon
  width size-normal
  height size-normal
  margin-left size-mini
  polyline, line
    stroke var(--btn-color-primary) !important

.cards-container
  width 100%
  overflow hidden
  display grid
  justify-content space-between
  align-items stretch
  grid-template-columns repeat(auto-fill, minmax(300px, 1fr))
  gap size-large

.card-link
  border-radius size-mini
  border 1px solid var(--logo-card-border)
  position relative
  overflow hidden
  background-color var(--logo-card-bg)
  display flex
  flex-flow row wrap
  font-weight 500
  color var(--text-color-primary)
  &:hover
    border-color var(--logo-card-border-hover)
    color var(--text-color-primary)

.item-image-wrapper
  width 100%
  padding size-normal
  display grid
  justify-content space-between
  grid-template-columns repeat(3, minmax(86px, 1fr))
  grid-template-rows repeat(3, minmax(86px, 1fr))

.item-image
  margin 10%

.card-footer
  width 100%
  height 80px
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-content center
  align-items center
  padding 0 size-normal
  border-top 1px solid var(--logo-card-border)

.footer-text
  display flex
  flex-direction column
  justify-content center
  align-content flex-start
  align-items flex-start

.pack-name
  margin size-mini 0 0 0
  padding 0
  height size-normal
  line-height size-normal
  font-size 14px
  text-transform uppercase
  font-weight 500
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.season-badge
  flex 0 auto
  margin 0
  padding 0
  height size-normal
  line-height size-normal
  text-transform uppercase
  font-size 12px
  font-weight 700
  padding 0 3px
  border-radius 3px
  background-color var(--btn-color-primary)
  color var(--header-text-color)