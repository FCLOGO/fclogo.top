// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.timeline-wrapper
  width 100%
  margin size-normal auto
  display block

.timeline-inner
  display flex
  flex-flow column wrap
  padding size-normal

.timeline-title
  width 100%
  font-size 14px
  line-height 1
  text-transform uppercase
  font-weight 600
  margin-bottom size-normal

.logo-container
  width 100%
  flex 1 auto
  display grid
  justify-content space-between
  grid-template-columns repeat(auto-fill, minmax(160px, 1fr))
  gap size-normal

.logo-card
  border 1px solid var(--border-color-primary)
  border-radius 5px

.card-link
  display flex
  flex-flow column wrap
  align-items center
  border none
  &:hover
    border none
    color var(--text-color-primary)

.logo-image
  margin size-small auto

.version-text
  height size-large
  line-height size-large
  font-size 14px
  font-weight 500