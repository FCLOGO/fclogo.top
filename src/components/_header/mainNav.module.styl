// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.main-nav-wrapper
  flex 1
  @media mq-tablet
    order 0
    flex none
    padding 0

.tablet-menu-toggle
  display none
  margin 0
  width header-height
  height header-height
  line-height header-height
  @media mq-tablet
    display inline-block !important

.main-menu-input
  display none
  appearance none
  &:checked+.main-menu
    display block

.menu-icon
  width header-height
  height header-height
  line-height header-height
  text-align center
  padding 15px
  color var(--header-text-color)
  opacity 0.8
  cursor pointer

.main-menu
  @media mq-tablet
    position fixed
    top 0
    left 0
    width 320px
    height 100%
    background-color var(--bg-color-secondary)
    z-index 16
    display none

.main-menu-modal
  display none !important
  @media mq-tablet
    display inherit !important
    position fixed
    top 0
    left 320px
    width calc(100% - 320px)
    height 100%
    background-color rgba(14, 42, 71, 0.9)
    z-index 5

.main-menu-close
  display none !important
  margin 0
  height header-height
  line-height header-height
  @media mq-tablet
    display inherit !important

.close-icon
  color var(--text-color-primary)
  opacity 0.8
  width header-height
  height header-height
  line-height header-height
  text-align center
  padding 15px
  cursor pointer