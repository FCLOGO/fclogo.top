// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.search-result-wrapper
  display none
  width 100%
  color var(--search-text-color)
  max-height 260px
  overflow scroll
  background-color var(--search-box-bg)
  border 1px solid var(--border-color-primary)
  border-radius 0 0 size-mini size-mini
  padding size-normal
  position absolute
  z-index 2
  right 0
  top 60px

.infinite-hits
  flex auto
  display flex
  flex-direction column
  align-items center

.infinite-hits ul, .infinite-hits li
  list-style none
  margin 0
  padding 0
  width 100%

.hits-link
  border none
  height header-height
  border-radius size-mini
  background-color var(--border-color-primary)
  margin-bottom size-small
  padding size-small size-normal
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center
  &:hover
    border none
    background-color var(--btn-color-primary)
    color var(--btn-text-color)
  &:hover svg
    polyline, line
      stroke var(--btn-text-color) !important
  &:hover mark
    color var(--btn-text-color)

.hits-image
  flex none
  width 40px
  height 40px
  margin-right size-normal

.hits-title
  flex auto
  display flex
  line-height 1
  flex-direction column
  justify-content center

.hits-title h4
  margin 0
  padding 0
  line-height 1
  margin-bottom size-mini
  font-weight 400

.hits-title > span
  margin 0
  padding 0
  font-size 12px

.hits-title mark
  font-weight 700
  color var(--text-color-primary)

.hits-link svg
  width size-normal !important
  height size-normal !important
  polyline, line
    stroke var(--text-color-primary) !important
    stroke-width 32 !important

.infinite-hits button
  flex none
  padding size-mini
  margin size-normal 0
  border-radius 3px
  border none
  background-color var(--btn-color-primary)
  color var(--btn-text-color)
  font-size 12px
  font-weight 600
  text-transform uppercase
  cursor pointer
  &:hover
    background-color var(--btn-color-secondary)

:global(.ais-InfiniteHits-loadMore--disabled)
  display none

.powered-by
  flex none
  height size-large
  width 100%
  display flex
  flex-flow row nowrap
  justify-content flex-end
  align-items center

.powered-by span
  font-weight 600
  text-transform uppercase
  font-size 12px
  line-height 1
  color var(--text-placeholder-color)
  margin-right size-small

.powered-by a
  line-height 1
  border none
  padding 0
  margin 0
  &:hover
    border none

.powered-by svg
  height 16px
  width 59px

:global(.alg-st0)
  fill var(--body-color) !important

:global(.alg-st1)
  fill var(--text-color-primary) !important
