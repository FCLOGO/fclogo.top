// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.footer-wrapper
  flex 0 auto
  padding size-large
  width 100%
  margin 0
  background-color var(--bg-footer-color)
  color var(--footer-text-color)
  display flex
  flex-flow column wrap
  justify-content center
  align-items flex-start
  section
    max-width 1400px
    margin 0 auto
    width 100%

.footer-logo
  height 40px
  margin-bottom size-normal !important
  @media mq-tablet
    text-align center

.logo-icon
  fill var(--footer-logo-color)
  height 40px

.footer-content
  display flex
  flex-flow row nowrap
  align-items flex-start
  justify-content space-between
  padding-bottom size-normal
  @media mq-tablet
    flex-flow column wrap
    align-items center

.social-icons
  display flex
  flex 0 auto
  flex-flow row nowrap
  align-items flex-start
  justify-content flex-start
  width 200px
  margin-right size-large
  @media mq-tablet
    margin 0
    align-items center
    justify-content center
  svg
    height size-normal
    width size-normal
    margin-right size-small
    fill var(--icon-color-primary)
    @media mq-tablet
      height size-large
      width size-large
      margin-right size-normal
      &:last-child
        margin-right 0

.footer-menu
  flex 0 auto
  width 200px
  margin-right size-large
  @media mq-tablet
    width 100%
    margin size-large 0
  input
    display none
    appearance none
    @media mq-tablet
      &:checked+ul
        display block
        margin-bottom size-large
        border-bottom 1px solid var(--footer-border-color)

.menu-title
  display none
  font-size 16px
  @media mq-tablet
    display block
    height 50px
    line-height 50px
    border-top 1px solid var(--footer-border-color)
    border-radius 3px
    padding 0
  label
    display flex
    flex-flow row nowrap
    align-items center
    justify-content space-between
    font-weight 600
    text-transform uppercase
    margin-bottom size-mini
    cursor pointer
    svg
      width 15px
      height 15px
      fill var(--footer-text-color)

.menu-list
  margin-bottom size-small
  padding 0
  @media mq-tablet
    display none
    padding-bottom size-normal

.menu-list-item
  list-style none
  margin-bottom size-small
  @media mq-tablet
    padding-left size-normal
    margin-bottom 0
    height 50px
    width 100%
    line-height 50px
    &:hover
      background-color rgba(0, 0, 0, 0.1)

.menu-link
  text-transform uppercase
  border none
  font-weight 600
  color var(--footer-text-color)
  white-space nowrap
  &:hover
    color var(--footer-text-color)
  @media mq-tablet
    display inline-block
    width 100%
    &:hover
      border none

.logo-numbers
  flex 1 auto
  display flex
  flex-flow row nowrap
  align-content flex-start
  justify-content flex-end
  color var(--footer-text-color)
  text-transform uppercase
  font-weight 600
  p
    margin-left size-large
    &:first-child
      margin-left 0
  span
    font-size @css { min(5vw, 72px) }
    line-height @css { min(5vw, 72px) }
    font-weight 100
    color var(--footer-number-color)

.copyright
  padding-top size-normal
  border-top 1px solid var(--footer-border-color)
  font-size 12px
  text-align right
  @media mq-tablet
    text-align center