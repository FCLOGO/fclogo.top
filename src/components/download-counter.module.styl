// Size
header-height = 60px
size-normal = 20px
size-large = 30px
size-small = 10px
size-mini = 6px
// Media queries
mq-tablet = 'screen and (max-width: 992px)'

.counter-container
  margin-top size-small
  display flex
  flex-flow row nowrap
  align-items center
  font-size 12px
  line-height 12px
  font-weight 600

.counter-container svg
  width size-normal
  height size-normal
  margin-right size-mini
  path, polyline
    stroke var(--text-color-primary) !important